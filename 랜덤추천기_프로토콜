<script>
let items = [];

function addItem() {
  const input = document.getElementById('itemInput');
  const value = input.value.trim();
  if (value === '') {
    alert('í•­ëª©ì„ ì…ë ¥í•˜ì„¸ìš”!');
    return;
  }
  items.push(value);
  input.value = '';
  showItems();
}

function showItems() {
  const listDiv = document.getElementById('itemList');
  listDiv.innerHTML = "<b>í•­ëª© ëª©ë¡:</b><br>" + items.join(', ');
}

function pickRandom() {
  if (items.length === 0) {
    alert('í•­ëª©ì´ ì—†ìŠµë‹ˆë‹¤. ì¶”ê°€í•´ì£¼ì„¸ìš”!');
    return;
  }
  const randomIndex = Math.floor(Math.random() * items.length);
  const result = items[randomIndex];
  document.getElementById('result').innerText = "ì¶”ì²œ: " + result;
}
